
@{
    ViewData["Title"] = "Form";
}

<html>
<head>
    <link rel="stylesheet" href="~/css/form.css" />
</head>
<body>
    <div>
        <form action="/Login/Requests" method="post">
            <h1>Request your party now!</h1>
            <label for="needs">What do you need?</label>
            <input type="text" name="needs" id="needs" required />
            <label for="types">Type of event or celebration</label><br />
            <select name="types">
                <option value="marriage">Marriage</option>
                <option value="baptism">Baptism</option>
                <option value="firstCommunion">First Communion</option>
                <option value="birthday">Birthday</option>
                <option value="degree">Degree</option>
                <option value="meeting">Meeting</option>
            </select><br />
            <label for="place">Where?</label><br />
            <input type="text" name="place" id="place" required /><br />
            <label for="date">When?</label><br />
            <input type="date" name="date" id="date" required /><br />
            <label for="numberInvites">Number of invites</label><br />
            <input type="number" name="numberInvites" id="numberInvites" min="1" required /><br />
            <label for="description">Descrption</label><br />
            <textarea name="description" id="description"></textarea>
            <input type="submit" value="SEND" id="button" />
        </form>
    </div>
</body>
</html>

